<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/catch_background"
    android:fitsSystemWindows="true"
    tools:context="com.example.jondhc.yoyo.Level1Activity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/branch"
        android:layout_alignParentBottom="true"
        android:scaleType="centerCrop"/>
    
    <ImageView
        android:id="@+id/cat_catch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/cat"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/dialogue_catch"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/chat1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_toRightOf="@id/cat_catch"/>

    <ImageView
        android:id="@+id/basket"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/basket"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/dialogue_catch"/>

    <TextView
        android:id="@+id/count_of_fruits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAlignment="center"
        android:textSize="80dp"
        android:textColor="@color/backgroundColor"
        android:layout_toRightOf="@id/cat_catch"
        android:layout_toLeftOf="@+id/basket"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="80dp"/>

</RelativeLayout>
